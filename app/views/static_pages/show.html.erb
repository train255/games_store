<div class="show_game">
  <div class="avatar">
    <%= image_tag @game.cover_image.thumb('128x128#').url %>
  </div>
  <div class="row">
    <div class="span4" style="margin-left: 0px">
      <div class="name">
        <h2><b><%= @game.name %></b></h2>
      </div>

      <select id="backing2b">
        <option value="0">Bad</option>
        <option value="1">Nomal</option>
        <option value="2">OK</option>
        <option value="3">Great</option>
        <option value="4">Perfect</option>
        <option value="5">Excellent</option>
      </select>
      <div class="rateit" data-rateit-backingfld="#backing2b"></div>
    </div>
    <div class="span2" style="margin-top: -30px; margin-left: 0px">
      <div style="padding-top:40px">
        <% if @game.price == 0 %>
          <% if @game.link %>
            <%= link_to image_tag("download.png"), @game.link %>
          <% else %>
            <%= link_to image_tag("download.png"), "http://games.brothersoft.com/free-cat-games-download-s1.html"%>
          <% end %>
        <% else %>
          <% if signed_in? %>
            <%= link_to image_tag("buynow.png"), '/payments/new' %>
            <%# binding.pry %>
          <% else%>
            <%= link_to image_tag("buynow.png"), "#myModal", html_options = { :"data-toggle" => "modal"} %>
          <% end %>
        <% end %>
      </div>
    </div>
    <div id="fb-root"></div>
      <script>
        // Load the SDK Asynchronously
        (function(d){
           var js, id = 'facebook-jssdk', ref = d.getElementsByTagName('script')[0];
           if (d.getElementById(id)) {return;}
           js = d.createElement('script'); js.id = id; js.async = true;
           js.src = "//connect.facebook.net/en_US/all.js#xfbml=1";
           ref.parentNode.insertBefore(js, ref);
         }(document));
      </script>
    <div class="fb-like"></div>
  </div>
  <div class="info">
    <p><%= @game.info.gsub("\n","<br>").html_safe %></p>
  </div>

  <div class="tabbable" style="margin-bottom: 18px;">
    <ul class="nav nav-tabs">
      <li class="active"><a href="#comment" data-toggle="tab">Comment</a></li>
      <li class=""><a href="#related" data-toggle="tab">Related</a></li>
    </ul>
    <div class="tab-content" style="padding-bottom: 9px; border-bottom: 1px solid #ddd;">
      <div class="tab-pane active" id="comment">
        <%= render "static_pages/comment" %>
      </div>
      <div class="tab-pane" id="related">
        <%= render 'static_pages/related' %>
      </div>
    </div>
  </div>
</div>