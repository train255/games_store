<%= javascript_include_tag "bootstrap-tooltip" %>
<%= javascript_include_tag "bootstrap-popover" %>

<ul class="nav nav-tabs">
   <li class="active">
      <% if @cateid != nil %>
      <a href="<%= root_path %>?category=<%= @cateid %>" >New Games</a>
      <% else %>
      <a href="<%= root_path %>" >New Games</a>
      <% end %>
   </li>
   <li>
      <%# binding.pry %>
      <% if @cateid != nil %>
      <a href="<%= hot_game_path %>?category=<%= @cateid %>" >Hot Games</a>
      <% else %>
      <a href="<%= hot_game_path %>" >Hot Games</a>
      <% end %>
   </li>
</ul>

<div class="row">
   <% @games_new.each do |game| %>
   <div class="span2">
      <%= link_to image_tag(game.cover_image.thumb('100x100#').url,
      class: "element_popover", rel: "popover", title: game.name, :"data-content" => game.description),
      {:action => 'show', :controller => 'static_pages', id: game} %>
      <p><b><%= game.name %></b></p>
      <p><div class="rateit"></div></p>
      <p>
        <% if game.price == 0 %>
          <% if game.link %>
            <%= link_to image_tag("download.png"), game.link %>
          <% else %>
            <%= link_to image_tag("download.png"), "http://games.brothersoft.com/free-cat-games-download-s1.html"%>
          <% end %>
        <% else %>
          <% if signed_in? %>
            <%= link_to image_tag("buynow.png"), '/payments/new' %>
            <%# binding.pry %>
          <% else%>
            <%= link_to image_tag("buynow.png"), "#myModal", html_options = { :"data-toggle" => "modal"} %>
          <% end %>
        <% end %>
      </p>
   </div>
   <% end %>
</div>
<%= paginate @games_new %>

<script>
$(function () {
  $(".element_popover").popover({
    offset: 5,
    placement: 'left'
  });
});
</script>