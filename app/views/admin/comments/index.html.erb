<ul class="breadcrumb">
  <li><%= link_to "Home", admin_root_path %></li> <span class="divider">/</span>
  <li class="active">Comments</li>
</ul>

<h1>Listing comments</h1>

<table class="table table-striped" style="width:70% !important;">
  <thead>
    <tr>
      <th>#</th>
      <th>Game</th>
      <th>Content</th>
      <th>User</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @comments.each_with_index do |comment, index| %>
      <tr>
        <td><%= index + 1 + (params[:page].present? ? (params[:page].to_i - 1)*@per_page : 0) %></td>
        <td><%= comment.game.name %></td>
        <td><%= comment.content %></td>
        <td><%= comment.user.email %></td>

        <td><%= link_to '<i class="icon-remove-sign"></i>'.html_safe, [:admin, comment], method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
</table>

<%= paginate @comments%>