    <%= f.label "Avatar:" %>
    <%= f.file_field :cover_image %>
  </div>  
  <div class="field">
    <%= f.label "Banner:" %>
    <%= f.file_field :banner %>
  </div>
  <div class="field">
    <%= f.label :price %>
    <%= f.text_field :price %>
  </div>
  
  <div class="field">
    <%= f.label "Hot Game" %>
    <%= f.check_box :is_hot %>
  </div>
 
