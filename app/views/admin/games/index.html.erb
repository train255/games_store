<h1>Listing games</h1>

<table class="table table-striped" style="width:70% !important;">
  <thead>
    <tr>
      <th width="10%"></th>
      <th width="20%">Name</th>

      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @games.each do |game| %>
      <tr>
        <td><%= image_tag game.cover_image.thumb('100x100#').url %></td>
        <td><%= game.name %></td>

        <td><%= link_to '<i class="icon-eye-open"></i>'.html_safe, [:admin, game] %></td>
        <td><%= link_to '<i class="icon-edit"></i>'.html_safe, edit_admin_game_path(game) %></td>
        <td><%= link_to '<i class="icon-remove-sign"></i>'.html_safe, [:admin, game], method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
</table>

<br />

<%= link_to 'New Game', new_admin_game_path %>
